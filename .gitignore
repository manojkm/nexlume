#  SENSITIVE — NEVER commit credentials
# =============================================================
wp-config.php

# If you ever add a .env file, keep it out too
.env
.env.*


# =============================================================
#  WP-CONTENT — third-party & generated content
# =============================================================

# User-uploaded media (large binaries, changes constantly)
wp-content/uploads/

# SVG catalog pages (distribute separately, not in git)
wp-content/themes/nexlume/assets/NexLume/
wp-content/themes/nexlume/assets/NexLumeAir/

# WordPress security placeholder files (auto-generated)
wp-content/index.php

# Bundled default themes (not our work)
wp-content/themes/twenty*/
wp-content/themes/index.php

# Plugins — install via WP Admin or Composer, not git
wp-content/plugins/

# Cache plugins often write here
wp-content/cache/
wp-content/upgrade/
wp-content/backup-db/
wp-content/advanced-cache.php
wp-content/wp-cache-config.php
wp-content/object-cache.php


