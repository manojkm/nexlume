# =============================================================
#  WORDPRESS CORE
#  Download fresh from wordpress.org — do not commit.
# =============================================================
wp-admin/
wp-includes/

# Root core files (leading / anchors to repo root only)
/index.php
/license.txt
/readme.html
/wp-activate.php
/wp-blog-header.php
/wp-comments-post.php
/wp-config-sample.php
/wp-cron.php
/wp-links-opml.php
/wp-load.php
/wp-login.php
/wp-mail.php
/wp-settings.php
/wp-signup.php
/wp-trackback.php
/xmlrpc.php


